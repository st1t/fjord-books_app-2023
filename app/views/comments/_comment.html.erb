<div id="comments">
  <div>
    <% commentable.comments.each do |comment| %>
      <div style="border: 1px solid black; padding: 10px; margin: 6px">
        <header>
          <span style="display: inline-block; margin-right: 10px;"><%= comment.user.name.empty? ? comment.user.email : comment.user.name %></span>
          <span style="display: inline-block;"><%= l comment.created_at, format: :long %></span>
        </header>
        <p>
          <%= comment.body %>
        </p>
        <% if comment.user == current_user %>
          <%= button_to t('views.common.destroy', name: Comment.model_name.human.downcase), comment, method: :delete %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
