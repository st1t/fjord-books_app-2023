<div id="comments">
  <h2>コメント</h2>

  <div>
    <% commentable.comments.each do |comment| %>
      <div style="border: 1px solid black; padding: 10px; margin: 6px">
        <header>
          <span style="display: inline-block; margin-right: 10px;"><%= comment.author %></span>
          <span style="display: inline-block;"><%= format_date(comment.created_at) %></span>
        </header>
        <p>
          <%= comment.body %>
        </p>
      </div>
    <% end %>
  </div>
</div>
